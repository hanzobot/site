---
const navLinks = [
  { href: '/skills', label: 'Skills' },
  { href: '/integrations', label: 'Integrations' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/showcase', label: 'Showcase' },
];

const hanzoProjects = [
  { href: '/', label: 'Bot', desc: 'AI team in a box', active: true },
  { href: 'https://docs.hanzo.ai/docs/llm', label: 'LLM Gateway', desc: '200+ AI models, one API' },
  { href: 'https://docs.hanzo.ai/docs/mcp', label: 'MCP', desc: '260+ tools for agents' },
  { href: 'https://docs.hanzo.ai/docs/dev', label: 'Dev', desc: 'AI coding assistant' },
  { href: 'https://docs.hanzo.ai/docs/zap', label: 'ZAP', desc: 'Agent communication protocol' },
  { href: 'https://docs.hanzo.ai/docs/services', label: 'Platform', desc: 'IAM, KMS, Cloud services' },
  { href: 'https://docs.hanzo.ai/docs/sdks', label: 'SDKs', desc: 'Python, TS, Go, Rust' },
  { href: 'https://docs.hanzo.ai/docs/commerce', label: 'Commerce', desc: 'Payments & commerce API' },
  { href: 'https://hanzo.ai', label: 'Hanzo AI', desc: 'hanzo.ai homepage' },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <nav class="site-nav">
    <div class="nav-brand">
      <a href="/" class="nav-logo" aria-label="Hanzo Bot Home">
        <svg viewBox="0 0 67 67" xmlns="http://www.w3.org/2000/svg" class="nav-logo-svg">
          <path d="M22.21 67V44.6369H0V67H22.21Z" fill="currentColor"/>
          <path d="M0 44.6369L22.21 46.8285V44.6369H0Z" fill="currentColor" opacity="0.4"/>
          <path d="M66.7038 22.3184H22.2534L0.0878906 44.6367H44.4634L66.7038 22.3184Z" fill="currentColor"/>
          <path d="M22.21 0H0V22.3184H22.21V0Z" fill="currentColor"/>
          <path d="M66.7198 0H44.5098V22.3184H66.7198V0Z" fill="currentColor"/>
          <path d="M66.6753 22.3185L44.5098 20.0822V22.3185H66.6753Z" fill="currentColor" opacity="0.4"/>
          <path d="M66.7198 67V44.6369H44.5098V67H66.7198Z" fill="currentColor"/>
        </svg>
      </a>

      <div class="project-switcher" id="project-switcher">
        <button class="switcher-trigger" id="switcher-trigger" aria-expanded="false" aria-haspopup="true">
          <span class="switcher-label">Bot</span>
          <svg class="switcher-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="6 9 12 15 18 9"/>
          </svg>
        </button>

        <div class="switcher-dropdown" id="switcher-dropdown">
          <div class="switcher-header">Hanzo Products</div>
          {hanzoProjects.map(p => (
            <a
              href={p.href}
              class:list={['switcher-item', { active: p.active }]}
              target={p.href.startsWith('http') ? '_blank' : undefined}
              rel={p.href.startsWith('http') ? 'noopener' : undefined}
            >
              <span class="switcher-item-label">{p.label}</span>
              <span class="switcher-item-desc">{p.desc}</span>
              {p.href.startsWith('http') && (
                <svg class="switcher-external" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
              )}
            </a>
          ))}
          <div class="switcher-footer">
            <a href="https://docs.hanzo.ai" target="_blank" rel="noopener" class="switcher-all-link">
              All Docs
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="14" height="14">
                <polyline points="9 18 15 12 9 6"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="nav-links">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={['nav-link', { active: currentPath === link.href || currentPath === link.href + '/' }]}
        >
          {link.label}
        </a>
      ))}
      <a href="https://docs.hanzo.ai/docs/bot" class="nav-link" target="_blank" rel="noopener">Docs</a>
    </div>

    <div class="nav-actions">
      <a href="https://github.com/hanzoai/bot" class="nav-github" target="_blank" rel="noopener" aria-label="GitHub">
        <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
      <a href="https://app.hanzo.bot" class="nav-cta" target="_blank" rel="noopener">
        Get Started Free
      </a>
    </div>

    <button class="nav-mobile-toggle" aria-label="Toggle menu" id="mobile-toggle">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" class="hamburger-icon">
        <line x1="3" y1="6" x2="21" y2="6"/>
        <line x1="3" y1="12" x2="21" y2="12"/>
        <line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" class="close-icon" style="display:none">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>
  </nav>

  <div class="mobile-menu" id="mobile-menu">
    {navLinks.map(link => (
      <a
        href={link.href}
        class:list={['mobile-link', { active: currentPath === link.href || currentPath === link.href + '/' }]}
      >
        {link.label}
      </a>
    ))}
    <a href="https://docs.hanzo.ai/docs/bot" class="mobile-link" target="_blank" rel="noopener">Docs</a>
    <div class="mobile-divider"></div>
    <div class="mobile-section-label">More from Hanzo</div>
    {hanzoProjects.filter(p => !p.active).slice(0, 5).map(p => (
      <a
        href={p.href}
        class="mobile-link mobile-link-sub"
        target={p.href.startsWith('http') ? '_blank' : undefined}
        rel={p.href.startsWith('http') ? 'noopener' : undefined}
      >
        {p.label} <span class="mobile-link-desc">â€” {p.desc}</span>
      </a>
    ))}
    <div class="mobile-actions">
      <a href="https://github.com/hanzoai/bot" class="mobile-link" target="_blank" rel="noopener">GitHub</a>
      <a href="https://app.hanzo.bot" class="nav-cta mobile-cta" target="_blank" rel="noopener">Get Started Free</a>
    </div>
  </div>
</header>

<script>
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  const hamburger = toggle?.querySelector('.hamburger-icon');
  const close = toggle?.querySelector('.close-icon');

  toggle?.addEventListener('click', () => {
    const open = menu?.classList.toggle('open');
    if (hamburger && close) {
      hamburger.style.display = open ? 'none' : 'block';
      close.style.display = open ? 'block' : 'none';
    }
  });

  // Project switcher dropdown
  const trigger = document.getElementById('switcher-trigger');
  const dropdown = document.getElementById('switcher-dropdown');

  trigger?.addEventListener('click', (e) => {
    e.stopPropagation();
    const open = dropdown?.classList.toggle('open');
    trigger?.setAttribute('aria-expanded', String(!!open));
  });

  document.addEventListener('click', (e) => {
    if (!document.getElementById('project-switcher')?.contains(e.target as Node)) {
      dropdown?.classList.remove('open');
      trigger?.setAttribute('aria-expanded', 'false');
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      dropdown?.classList.remove('open');
      trigger?.setAttribute('aria-expanded', 'false');
    }
  });
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(5, 8, 16, 0.85);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid rgba(136, 146, 176, 0.1);
  }

  .site-nav {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px;
    height: 56px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  /* Brand: Logo + Switcher */
  .nav-brand {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-shrink: 0;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--coral-bright, #fd4444);
    flex-shrink: 0;
    transition: opacity 0.2s ease;
  }

  .nav-logo:hover {
    opacity: 0.85;
  }

  .nav-logo-svg {
    width: 28px;
    height: 28px;
    filter: drop-shadow(0 0 8px rgba(253, 68, 68, 0.4));
  }

  /* Project Switcher */
  .project-switcher {
    position: relative;
  }

  .switcher-trigger {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 8px 4px 10px;
    background: none;
    border: 1px solid transparent;
    border-radius: 8px;
    color: var(--text-primary, #f0f4ff);
    font-family: var(--font-display, 'Inter', system-ui, sans-serif);
    font-size: 1.05rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .switcher-trigger:hover {
    border-color: var(--border-subtle, rgba(136, 146, 176, 0.15));
    background: rgba(255, 255, 255, 0.03);
  }

  .switcher-chevron {
    width: 14px;
    height: 14px;
    color: var(--text-muted, #5a6480);
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .switcher-trigger[aria-expanded="true"] .switcher-chevron {
    transform: rotate(180deg);
  }

  .switcher-dropdown {
    display: none;
    position: absolute;
    top: calc(100% + 8px);
    left: -8px;
    min-width: 280px;
    background: rgba(10, 15, 26, 0.98);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(136, 146, 176, 0.15);
    border-radius: 14px;
    padding: 6px;
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.5);
    z-index: 200;
  }

  .switcher-dropdown.open {
    display: block;
    animation: dropdownIn 0.15s ease-out;
  }

  @keyframes dropdownIn {
    from { opacity: 0; transform: translateY(-4px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .switcher-header {
    font-family: var(--font-mono, monospace);
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--text-muted, #5a6480);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 8px 12px 6px;
  }

  .switcher-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 10px;
    text-decoration: none;
    color: var(--text-primary, #f0f4ff);
    transition: all 0.15s ease;
  }

  .switcher-item:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .switcher-item.active {
    background: rgba(253, 68, 68, 0.08);
    border-left: 2px solid var(--coral-bright, #fd4444);
    padding-left: 10px;
  }

  .switcher-item-label {
    font-family: var(--font-display, system-ui);
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .switcher-item-desc {
    font-size: 0.75rem;
    color: var(--text-muted, #5a6480);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .switcher-external {
    width: 12px;
    height: 12px;
    color: var(--text-muted, #5a6480);
    margin-left: auto;
    flex-shrink: 0;
  }

  .switcher-footer {
    border-top: 1px solid rgba(136, 146, 176, 0.1);
    margin-top: 4px;
    padding: 6px 6px 2px;
  }

  .switcher-all-link {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--coral-bright, #fd4444);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .switcher-all-link:hover {
    background: rgba(253, 68, 68, 0.08);
    color: var(--cyan-bright, #00e5cc);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-left: 24px;
  }

  .nav-link {
    font-family: var(--font-display, 'Inter', system-ui, sans-serif);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary, #8892b0);
    text-decoration: none;
    padding: 6px 12px;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: var(--text-primary, #f0f4ff);
    background: rgba(255, 255, 255, 0.05);
  }

  .nav-link.active {
    color: var(--coral-bright, #fd4444);
    background: rgba(253, 68, 68, 0.08);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-left: auto;
  }

  .nav-github {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary, #8892b0);
    transition: color 0.2s ease;
  }

  .nav-github:hover {
    color: var(--text-primary, #f0f4ff);
  }

  .nav-github svg {
    width: 20px;
    height: 20px;
  }

  .nav-cta {
    font-family: var(--font-display, 'Inter', system-ui, sans-serif);
    font-size: 0.8rem;
    font-weight: 600;
    color: #050810;
    background: var(--coral-bright, #fd4444);
    padding: 6px 16px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-cta:hover {
    background: #ff6b6b;
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(253, 68, 68, 0.3);
  }

  .nav-mobile-toggle {
    display: none;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    margin-left: auto;
    background: none;
    border: none;
    color: var(--text-secondary, #8892b0);
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-mobile-toggle:hover {
    color: var(--text-primary, #f0f4ff);
    background: rgba(255, 255, 255, 0.05);
  }

  .nav-mobile-toggle svg {
    width: 22px;
    height: 22px;
  }

  .mobile-menu {
    display: none;
    flex-direction: column;
    padding: 8px 24px 16px;
    border-bottom: 1px solid rgba(136, 146, 176, 0.1);
    background: rgba(5, 8, 16, 0.95);
  }

  .mobile-menu.open {
    display: flex;
  }

  .mobile-link {
    font-family: var(--font-display, 'Inter', system-ui, sans-serif);
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text-secondary, #8892b0);
    text-decoration: none;
    padding: 12px 0;
    border-bottom: 1px solid rgba(136, 146, 176, 0.08);
    transition: color 0.2s ease;
  }

  .mobile-link:hover {
    color: var(--text-primary, #f0f4ff);
  }

  .mobile-link.active {
    color: var(--coral-bright, #fd4444);
  }

  .mobile-link-sub {
    font-size: 0.85rem;
    padding: 10px 0 10px 12px;
  }

  .mobile-link-desc {
    color: var(--text-muted, #5a6480);
    font-weight: 400;
  }

  .mobile-divider {
    height: 1px;
    background: rgba(136, 146, 176, 0.12);
    margin: 8px 0;
  }

  .mobile-section-label {
    font-family: var(--font-mono, monospace);
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--text-muted, #5a6480);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 8px 0 4px;
  }

  .mobile-actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 12px;
  }

  .mobile-cta {
    padding: 10px 24px;
    font-size: 0.9rem;
    border-bottom: none;
  }

  @media (max-width: 768px) {
    .nav-links,
    .nav-actions {
      display: none;
    }

    .nav-mobile-toggle {
      display: flex;
    }
  }
</style>
