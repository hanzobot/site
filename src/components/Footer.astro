---
const productLinks = [
  { href: '/', label: 'Home' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/skills', label: 'Skills' },
  { href: '/integrations', label: 'Integrations' },
  { href: '/showcase', label: 'Showcase' },
];

const hanzoLinks = [
  { href: 'https://docs.hanzo.ai/docs/bot', label: 'Docs' },
  { href: 'https://docs.hanzo.ai/docs/llm', label: 'LLM Gateway' },
  { href: 'https://docs.hanzo.ai/docs/mcp', label: 'MCP' },
  { href: 'https://docs.hanzo.ai/docs/dev', label: 'Dev' },
  { href: 'https://hanzo.ai', label: 'Hanzo AI' },
];
---

<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-brand">
      <a href="/" class="footer-logo" aria-label="Hanzo Bot">
        <svg viewBox="0 0 67 67" xmlns="http://www.w3.org/2000/svg" class="footer-logo-svg">
          <path d="M22.21 67V44.6369H0V67H22.21Z" fill="currentColor"/>
          <path d="M0 44.6369L22.21 46.8285V44.6369H0Z" fill="currentColor" opacity="0.4"/>
          <path d="M66.7038 22.3184H22.2534L0.0878906 44.6367H44.4634L66.7038 22.3184Z" fill="currentColor"/>
          <path d="M22.21 0H0V22.3184H22.21V0Z" fill="currentColor"/>
          <path d="M66.7198 0H44.5098V22.3184H66.7198V0Z" fill="currentColor"/>
          <path d="M66.6753 22.3185L44.5098 20.0822V22.3185H66.6753Z" fill="currentColor" opacity="0.4"/>
          <path d="M66.7198 67V44.6369H44.5098V67H66.7198Z" fill="currentColor"/>
        </svg>
      </a>
      <span class="footer-tagline">Your AI team, deployed everywhere.</span>
    </div>

    <div class="footer-columns">
      <nav class="footer-col">
        <span class="footer-col-title">Product</span>
        {productLinks.map(link => (
          <a href={link.href} class="footer-link">{link.label}</a>
        ))}
      </nav>
      <nav class="footer-col">
        <span class="footer-col-title">Hanzo</span>
        {hanzoLinks.map(link => (
          <a href={link.href} class="footer-link" target="_blank" rel="noopener">{link.label}</a>
        ))}
      </nav>
    </div>

    <div class="footer-meta">
      <div class="footer-links-row">
        <a href="https://github.com/hanzoai/bot" target="_blank" rel="noopener">GitHub</a>
        <span class="footer-sep">&middot;</span>
        <a href="https://discord.gg/hanzo" target="_blank" rel="noopener">Discord</a>
        <span class="footer-sep">&middot;</span>
        <a href="https://x.com/hanzoai" target="_blank" rel="noopener">@hanzoai</a>
      </div>
      <p class="footer-copyright">&copy; 2016 <a href="https://hanzo.ai" target="_blank" rel="noopener">Hanzo AI Inc</a> &middot; Open Source</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid rgba(136, 146, 176, 0.1);
    margin-top: auto;
    padding: 48px 24px 32px;
  }

  .footer-inner {
    max-width: 860px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    text-align: center;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .footer-logo {
    display: flex;
    color: var(--text-muted, #5a6480);
    transition: color 0.2s ease;
  }

  .footer-logo:hover {
    color: var(--coral-bright, #ffffff);
  }

  .footer-logo-svg {
    width: 24px;
    height: 24px;
  }

  .footer-tagline {
    font-size: 0.85rem;
    color: var(--text-muted, #5a6480);
  }

  .footer-columns {
    display: flex;
    gap: 48px;
    justify-content: center;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .footer-col-title {
    font-family: var(--font-mono, monospace);
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted, #5a6480);
    margin-bottom: 4px;
  }

  .footer-link {
    font-size: 0.85rem;
    color: var(--text-secondary, #8892b0);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--coral-bright, #ffffff);
  }

  .footer-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .footer-links-row {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
  }

  .footer-links-row a {
    color: var(--coral-bright, #ffffff);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links-row a:hover {
    color: var(--cyan-bright, #a0a0a0);
  }

  .footer-sep {
    color: var(--text-muted, #5a6480);
  }

  .footer-copyright {
    font-size: 0.8rem;
    color: var(--text-muted, #5a6480);
  }

  .footer-copyright a {
    color: var(--text-secondary, #8892b0);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-copyright a:hover {
    color: var(--coral-bright, #ffffff);
  }
</style>
